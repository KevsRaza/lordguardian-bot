"""
Cog de mod√©ration pour le bot
"""
import discord
from discord.ext import commands
from discord import app_commands
from src.core.logger import setup_logger  # ‚Üê CORRIG√â
from src.utils.helpers import format_time  # ‚Üê CORRIG√â
import asyncio

logger = setup_logger("Moderation")

class Moderation(commands.Cog):
    """Commandes de mod√©ration"""
    
    def __init__(self, bot):
        self.bot = bot
    
    @commands.command(name="clear")
    @commands.has_permissions(manage_messages=True)
    async def clear_messages(self, ctx, amount: int = 10):
        """
        Supprime un nombre de messages
        
        Usage: !clear [nombre=10]
        """
        if amount < 1 or amount > 100:
            await ctx.send("‚ùå Le nombre doit √™tre entre 1 et 100")
            return
        
        deleted = await ctx.channel.purge(limit=amount + 1)
        message = await ctx.send(f"‚úÖ {len(deleted) - 1} messages supprim√©s")
        await asyncio.sleep(3)
        await message.delete()
    
    @commands.command(name="kick")
    @commands.has_permissions(kick_members=True)
    async def kick_member(self, ctx, member: discord.Member, *, reason: str = "Aucune raison donn√©e"):
        """
        Expulse un membre du serveur
        
        Usage: !kick @membre [raison]
        """
        if member == ctx.author:
            await ctx.send("‚ùå Vous ne pouvez pas vous expulser vous-m√™me")
            return
        
        try:
            await member.kick(reason=reason)
            await ctx.send(f"‚úÖ {member.mention} a √©t√© expuls√©\nüìù Raison: {reason}")
        except discord.Forbidden:
            await ctx.send("‚ùå Je n'ai pas la permission d'expulser ce membre")
    
    @commands.command(name="ban")
    @commands.has_permissions(ban_members=True)
    async def ban_member(self, ctx, member: discord.Member, *, reason: str = "Aucune raison donn√©e"):
        """
        Bannit un membre du serveur
        
        Usage: !ban @membre [raison]
        """
        if member == ctx.author:
            await ctx.send("‚ùå Vous ne pouvez pas vous bannir vous-m√™me")
            return
        
        try:
            await member.ban(reason=reason, delete_message_days=0)
            await ctx.send(f"‚úÖ {member.mention} a √©t√© banni\nüìù Raison: {reason}")
        except discord.Forbidden:
            await ctx.send("‚ùå Je n'ai pas la permission de bannir ce membre")
    
    @commands.command(name="unban")
    @commands.has_permissions(ban_members=True)
    async def unban_member(self, ctx, *, user_input: str):
        """
        D√©bannit un utilisateur
        
        Usage: !unban nom#tag ou ID
        """
        banned_users = await ctx.guild.bans()
        
        for ban_entry in banned_users:
            user = ban_entry.user
            
            if str(user.id) == user_input or f"{user.name}#{user.discriminator}" == user_input:
                await ctx.guild.unban(user)
                await ctx.send(f"‚úÖ {user.mention} a √©t√© d√©banni")
                return
        
        await ctx.send("‚ùå Utilisateur non trouv√© dans la liste des bannis")
    
    @commands.command(name="mute")
    @commands.has_permissions(manage_roles=True)
    async def mute_member(self, ctx, member: discord.Member, duration: str = "10m", *, reason: str = "Aucune raison donn√©e"):
        """
        Rend muet un membre temporairement
        
        Usage: !mute @membre [dur√©e=10m] [raison]
        Formats de dur√©e: 10s, 5m, 2h, 1d
        """
        # Recherche ou cr√©ation du r√¥le "Muted"
        muted_role = discord.utils.get(ctx.guild.roles, name="Muted")
        
        if not muted_role:
            try:
                muted_role = await ctx.guild.create_role(name="Muted")
                
                # Enlever les permissions d'√©criture dans tous les salons
                for channel in ctx.guild.channels:
                    await channel.set_permissions(muted_role, send_messages=False)
            except discord.Forbidden:
                await ctx.send("‚ùå Je n'ai pas la permission de cr√©er le r√¥le Muted")
                return
        
        # Convertir la dur√©e
        duration_seconds = self.parse_duration(duration)
        if duration_seconds is None:
            await ctx.send("‚ùå Format de dur√©e invalide. Exemples: 10s, 5m, 2h, 1d")
            return
        
        await member.add_roles(muted_role, reason=reason)
        
        embed = discord.Embed(
            title="üîá Membre rendu muet",
            color=discord.Color.orange()
        )
        embed.add_field(name="Membre", value=member.mention)
        embed.add_field(name="Dur√©e", value=format_time(duration_seconds))
        embed.add_field(name="Raison", value=reason, inline=False)
        embed.set_footer(text=f"Par {ctx.author}")
        
        await ctx.send(embed=embed)
        
        # Planifier le d√©mute
        await asyncio.sleep(duration_seconds)
        try:
            await member.remove_roles(muted_role)
        except:
            pass
    
    def parse_duration(self, duration: str) -> int | None:
        """Convertit une dur√©e textuelle en secondes"""
        try:
            if duration.endswith('s'):
                return int(duration[:-1])
            elif duration.endswith('m'):
                return int(duration[:-1]) * 60
            elif duration.endswith('h'):
                return int(duration[:-1]) * 3600
            elif duration.endswith('d'):
                return int(duration[:-1]) * 86400
            else:
                return int(duration) * 60  # Par d√©faut minutes
        except ValueError:
            return None
    
    @commands.command(name="warn")
    @commands.has_permissions(kick_members=True)
    async def warn_member(self, ctx, member: discord.Member, *, reason: str):
        """
        Avertit un membre
        
        Usage: !warn @membre [raison]
        """
        embed = discord.Embed(
            title="‚ö†Ô∏è Avertissement",
            description=f"Vous avez √©t√© averti sur **{ctx.guild.name}**",
            color=discord.Color.yellow()
        )
        embed.add_field(name="Raison", value=reason)
        embed.add_field(name="Mod√©rateur", value=ctx.author.mention)
        embed.set_footer(text="Les avertissements r√©p√©t√©s peuvent mener √† des sanctions")
        
        try:
            await member.send(embed=embed)
            await ctx.send(f"‚úÖ {member.mention} a √©t√© averti")
        except discord.Forbidden:
            await ctx.send(f"‚úÖ {member.mention} a √©t√© averti (MP d√©sactiv√©s)")

async def setup(bot):
    await bot.add_cog(Moderation(bot))